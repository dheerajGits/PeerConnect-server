generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String            @id @default(cuid())
  name            String?
  email           String?
  phone           String            @unique
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @default(now()) @updatedAt
  metaData        Json?
  Meetings        Meetings[]
  Companies       Companies?        @relation(fields: [companiesId], references: [id])
  companiesId     String?
  meetingAttendee MeetingAttendee[]
}

model MeetingAttendee {
  id         String    @id @default(cuid())
  name       String?
  joinedAt   DateTime
  leftAt     DateTime?
  meetingId  String
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  meeting    Meetings  @relation(fields: [meetingsId], references: [id])
  isCameraOn Boolean   @default(false)
  isHost     Boolean   @default(false)
  hostId     String?
  meetingsId String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  Host       Host[]
  Message    Message[]
}

model Message {
  id            String          @id @default(cuid())
  message       String
  participantId String
  participant   MeetingAttendee @relation(fields: [participantId], references: [id])
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @default(now()) @updatedAt
}

model Host {
  id            String          @id @default(cuid())
  meetingId     String
  meeting       Meetings        @relation(fields: [meetingId], references: [id])
  participantId String
  participant   MeetingAttendee @relation(fields: [participantId], references: [id])

  @@unique([meetingId, participantId])
}

model Meetings {
  id               String            @id @default(cuid())
  startDateTime    DateTime
  endDateTime      DateTime
  name             String?
  users            User[]
  meetingHosts     Host[]
  meetingAttendees MeetingAttendee[]
  durationInHours  String
}

model Companies {
  id             String   @id @default(cuid())
  users          User[]
  companyEmail   String
  password       String?
  planExpiryDate DateTime
  plan           Plan?    @relation(fields: [planId], references: [id])
  planId         String
}

model Plan {
  id             String      @id @default(cuid())
  name           String
  amount         String
  Companies      Companies[]
  discount       String?
  durationInDays String
}
